
@{
    ViewData["Title"] = "RegisterUser";
}

<form>
    <div class="container">
        <div class="row">
            <div class="=col-md-12">
                &nbsp;
            </div>
            <div class="row">
                <div class="=col-md-3">
                </div>
                <div class="col-md-9">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 text-center">
                                <h2>Register User</h2>
                            </div>
                        </div>
                        <div class="=row">
                            <div class="col-md-3 text-right">
                                User Password:
                            </div>
                            <div class="col-md-6">
                                @Html.Password("pwd");
                            </div>
                        </div>
                        <br />
                        <div class="=row">
                            <div class="col-md-3 text-right">
                                Gender:
                            </div>
                            <div class="col-md-6">
                                @Html.TextBox("Gender");
                            </div>
                        </div>
                        <br />
                        <div class="=row">
                            <div class="col-md-3 text-right">
                                Date of Birth:
                            </div>
                            <div class="col-md-6">
                                @Html.TextBox("DOB")
                            </div>
                        </div>
                        <br />
                        <div class="=row">
                            <div class="col-md-3 text-right">
                                Address:
                            </div>
                            <div class="col-md-6">
                                @Html.TextBox("Address");
                            </div>
                        </div>
                        <br />
                        <div class="=row">
                            <div class="col-md-3 text-right">
                                &nbsp;
                            </div>
                            <div class="col-md-6">
                               <input type="submit" value="Register" id="btnLogin" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


